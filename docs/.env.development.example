# =============================================================================
# MechaMap Realtime Server - Development Configuration
# =============================================================================
# Copy this file to .env.development for local development

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# SSL Configuration (Disabled for local development)
SSL_ENABLED=false

# Database Configuration (Local MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mechamap_db_local
DB_USER=root
DB_PASSWORD=your_local_password
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=30000

# Redis Configuration (Optional for local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_PREFIX=mechamap_realtime_dev:

# JWT Configuration (Use different secret for development)
JWT_SECRET=dev_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256

# Laravel Integration (Local Laravel)
LARAVEL_API_URL=https://mechamap.test
LARAVEL_API_KEY=dev_api_key_change_this
LARAVEL_DB_CONNECTION=true

# CORS Configuration (Development) - Allow local domains
CORS_ORIGIN=https://mechamap.test,http://mechamap.test,http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CORS_CREDENTIALS=true

# Admin Configuration (Development)
ADMIN_KEY=dev_admin_key_change_this

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# WebSocket Configuration
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_HTTP_BUFFER_SIZE=1e6
WS_TRANSPORTS=websocket,polling
WS_UPGRADE_TIMEOUT=10000

# Connection Limits (Lower for development)
MAX_CONNECTIONS=100
MAX_CONNECTIONS_PER_USER=10
CONNECTION_TIMEOUT=30000
HEARTBEAT_INTERVAL=25000

# Logging Configuration (Verbose for development)
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Monitoring & Health Checks
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
PROMETHEUS_METRICS=false

# Performance Tuning (Development)
CLUSTER_ENABLED=false
CLUSTER_INSTANCES=1
MEMORY_LIMIT=512
CPU_LIMIT=1

# Security Settings (Relaxed for development)
TRUST_PROXY=false

# Development Settings - Enable Development Features
DEBUG_MODE=true
VERBOSE_LOGGING=true
MOCK_LARAVEL_API=false

# SSL Settings for development (Ignore SSL certificate issues)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Authentication Settings - Development Mode
DISABLE_AUTH=false
MOCK_USER_ID=1
MOCK_USER_ROLE=member

# Development Tools
HOT_RELOAD=true
WATCH_FILES=true
AUTO_RESTART=true

# Environment Detection
ENVIRONMENT_TYPE=development
IS_LOCAL=true
IS_PRODUCTION=false
